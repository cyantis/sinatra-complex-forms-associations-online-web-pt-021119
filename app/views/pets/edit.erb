<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name">

  <br>
  <label>Choose an existing owner:</label>

  <br>

  <%Owner.all.each do |owner|%>
    <!-- doesn't populate owner.name for checkboxes -->
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.name %>" value="<%= owner.id %>"><%='checked' if @pets.owner_id == owner.id %>><%=owner.name%></input>
  <%end%>
  <br>
  <label>and/or, create a new owner:</label>
    <label>name:</label>
      <input  type="text" name="owner[name]" id="owner_name"></input>
  <br>

  <input type="submit" value="Update Pet">
</form>
